<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.inforgeneses.aula01">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- configuração do banco de dados -->
        <meta-data
            android:name="DATABASE"
            android:value="Aula1.db" />
        <meta-data
            android:name="VERSION"
            android:value="3" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="br.com.inforgeneses.aula01_" />
        <!-- fim configuração do banco de dados -->

        <activity android:name="br.com.inforgeneses.aula01.listarprodutos.ListarProdutosActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.com.inforgeneses.aula01.cadastrarproduto.CadastrarProdutoActivity"></activity>
    </application>

</manifest>